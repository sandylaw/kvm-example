{
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `preseed_path`}} <wait>",
        "debian-installer=en_US.UTF-8 <wait>",
        "auto <wait>",
        "locale=en_US.UTF-8 <wait>",
        "language=en <wait>",
        "country=US <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname={{.Name}} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "grub-installer/bootdev=/dev/vda <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "5s",
      "communicator": "ssh",
      "cpus": 1,
      "disk_size": "65536M",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "memory": 1024,
      "output_directory": "builds/packer-{{user `name_template`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -hP now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "vagrant",
      "type": "qemu",
      "vm_name": "{{user `name_template`}}"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": true,
      "output": "builds/{{user `name_template`}}-{{.Provider}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} bash '{{.Path}}'",
      "inline": [
        "echo \"deb http://ppa.launchpad.net/ansible/ansible/ubuntu trusty main\" >> /etc/apt/sources.list",
        "apt -y install dirmngr",
        "apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 93C4A3FD7BB9C367",
        "apt-get update",
        "apt -y install ansible"
        ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/playbook.yml",
      "playbook_dir": "ansible"
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} bash '{{.Path}}'",
      "inline": [
        "apt -y remove ansible",
        "apt-get clean",
        "apt-get -y autoremove --purge"
      ]
    },
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "scripts/common/sudoers.sh",
        "scripts/common/vagrant.sh",
        "scripts/debian/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "debian_version": "{{user `major_version`}}.{{user `minor_version`}}",
    "iso_checksum": "b317d87b0a3d5b568f48a92dcabfc4bc51fe58d9f67ca13b013f1b8329d1306d",
    "iso_checksum_type": "sha256",
    "iso_name": "debian-{{user `debian_version`}}.0-amd64-netinst.iso",
    "major_version": "10",
    "minor_version": "7",
    "mirror": "https://mirrors.ustc.edu.cn/debian-cd",
    "mirror_directory": "{{user `debian_version`}}.0/amd64/iso-cd",
    "name_template": "debian-{{user `debian_version`}}-amd64",
    "preseed_path": "debian-{{user `major_version`}}/preseed.cfg"
  }
}

